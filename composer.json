{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "nunomaduro/laravel-starter-kit-inertia-react",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.5",
        "inertiajs/inertia-laravel": "^2.0.11",
        "laravel/fortify": "^1.32.1",
        "laravel/framework": "^12.41.1",
        "laravel/tinker": "^2.10.2",
        "laravel/wayfinder": "^0.1.12",
        "nunomaduro/essentials": "^1.0.1"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.6",
        "driftingly/rector-laravel": "^2.1.6",
        "fakerphp/faker": "^1.24.1",
        "larastan/larastan": "^3.8.0",
        "laravel/boost": "^1.8.4",
        "laravel/pail": "^1.2.4",
        "laravel/pint": "^1.26.0",
        "laravel/sail": "^1.50",
        "mockery/mockery": "^1.6.12",
        "msamgan/laravel-env-keys-checker": "^1.9",
        "nunomaduro/collision": "^8.8.3",
        "pestphp/pest": "^4.1.6",
        "pestphp/pest-plugin-browser": "^4.1.1",
        "pestphp/pest-plugin-laravel": "^4.0.0",
        "pestphp/pest-plugin-profanity": "^4.2",
        "pestphp/pest-plugin-type-coverage": "^4.0.3",
        "rector/rector": "^2.2.11",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "setup": [
            "composer install",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate",
            "@php artisan migrate --force",
            "npm install",
            "npm run build"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan clear",
            "@update:requirements"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "update:requirements": [
            "composer bump",
            "npx npm-check-updates -u"
        ],
        "pint": "pint --dirty",
        "analyse": "phpstan",
        "refactor": "rector",
        "lint": [
            "@refactor",
            "@pint",
            "npm run lint"
        ],
        "test:env": "php artisan env:keys-check",
        "test:pint": "pint --test",
        "test:profanity": "pest --profanity --compact",
        "test:refactor": "rector --dry-run",
        "test:syntax": "find . -path ./vendor -prune -o -type f -name \"*.php\" ! -name \"*.blade.php\" -print | xargs -P 2 -n 1 php -l",
        "test:type-coverage": "pest --type-coverage --min=100 --compact",
        "test:unit": "pest --parallel",
        "test:unit:mutation": "pest --parallel --mutate --min=100",
        "test:lint": [
            "@test:pint",
            "@test:refactor",
            "npm run test:lint"
        ],
        "test:types": [
            "phpstan",
            "npm run test:types"
        ],
        "test": [
            "@test:env",
            "@test:profanity",
            "@test:syntax",
            "@test:lint",
            "@test:types",
            "@test:type-coverage",
            "@test:unit",
            "@test:unit:mutation"
        ],
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
